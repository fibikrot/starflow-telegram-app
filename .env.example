# StarFlow Environment Configuration
# Скопируйте этот файл в .env и заполните необходимые значения

# ================================
# ОСНОВНЫЕ НАСТРОЙКИ
# ================================
NODE_ENV=development
PORT=3000
CLIENT_URL=http://localhost:3000

# ================================
# БАЗА ДАННЫХ
# ================================
# MongoDB connection string
DATABASE_URL=mongodb://localhost:27017/starflow
# Или для MongoDB Atlas:
# DATABASE_URL=mongodb+srv://username:password@cluster.mongodb.net/starflow

# ================================
# JWT АУТЕНТИФИКАЦИЯ
# ================================
# Секретный ключ для JWT токенов (используйте сложный случайный ключ)
JWT_SECRET=your-super-secret-jwt-key-here-make-it-very-long-and-random
JWT_EXPIRES_IN=7d

# ================================
# TELEGRAM BOT
# ================================
# Токен бота от @BotFather
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
# Имя пользователя бота (без @)
TELEGRAM_BOT_USERNAME=your_bot_username
# URL для webhook (только для продакшена)
WEBHOOK_URL=https://yourdomain.com

# ================================
# WEB3 И БЛОКЧЕЙН
# ================================
# Infura или другой Web3 провайдер
WEB3_PROVIDER_URL=https://rpc-mumbai.maticvigil.com/
# Или для тестовой сети:
# WEB3_PROVIDER_URL=https://goerli.infura.io/v3/your-project-id

# Адреса смарт-контрактов
USDT_CONTRACT_ADDRESS=0xdAC17F958D2ee523a2206206994597C13D831ec7
CUSTOM_TOKEN_CONTRACT_ADDRESS=your-custom-token-address

# Приватный ключ кошелька для транзакций (только для продакшена)
WALLET_PRIVATE_KEY=your-wallet-private-key-here

# ================================
# ВНЕШНИЕ API
# ================================
# CoinGecko API для курсов валют
COINGECKO_API_KEY=your-coingecko-api-key
# CoinMarketCap API (альтернатива)
COINMARKETCAP_API_KEY=your-coinmarketcap-api-key

# ================================
# ФАЙЛОВОЕ ХРАНИЛИЩЕ
# ================================
# Локальное хранение или облачное (AWS S3, Cloudinary)
STORAGE_TYPE=local
# Для AWS S3:
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_BUCKET_NAME=your-bucket-name
# AWS_REGION=us-east-1

# Для Cloudinary:
# CLOUDINARY_CLOUD_NAME=your-cloud-name
# CLOUDINARY_API_KEY=your-api-key
# CLOUDINARY_API_SECRET=your-api-secret

# ================================
# EMAIL СЕРВИС (ОПЦИОНАЛЬНО)
# ================================
# Для отправки уведомлений по email
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# ================================
# REDIS (ОПЦИОНАЛЬНО)
# ================================
# Для кэширования и сессий
REDIS_URL=redis://localhost:6379
# Или для Redis Cloud:
# REDIS_URL=redis://username:password@host:port

# ================================
# ЛОГИРОВАНИЕ
# ================================
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# ================================
# БЕЗОПАСНОСТЬ
# ================================
# Секретный ключ для шифрования
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Максимальное количество запросов в час
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW=3600000

# ================================
# ИГРОВЫЕ НАСТРОЙКИ
# ================================
# Базовая награда за клик
BASE_CLICK_REWARD=1
# Максимальное время игры в секундах
MAX_GAME_DURATION=300
# Ежедневный бонус
DAILY_BONUS_AMOUNT=100

# ================================
# РЕФЕРАЛЬНАЯ СИСТЕМА
# ================================
# Процент с рефералов
REFERRAL_PERCENTAGE=10
# Максимальный уровень рефералов
MAX_REFERRAL_LEVELS=3

# ================================
# WEB3 НАСТРОЙКИ
# ================================
# Минимальная сумма для вывода
MIN_WITHDRAWAL_AMOUNT=10
# Комиссия за вывод в процентах
WITHDRAWAL_FEE_PERCENTAGE=2
# Газовый лимит для транзакций
GAS_LIMIT=21000

# ================================
# ПРОДАКШЕН НАСТРОЙКИ
# ================================
# Только для продакшена
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# SSL_KEY_PATH=/path/to/ssl/key.pem
# SENTRY_DSN=your-sentry-dsn-for-error-tracking

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Web3 Configuration
WEB3_PROVIDER_URL=https://rpc-mumbai.maticvigil.com/
PRIVATE_KEY=your_private_key_here
TOKEN_CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890
NFT_CONTRACT_ADDRESS=0x0987654321098765432109876543210987654321

# Network Configuration
NETWORK_NAME=Polygon Mumbai Testnet
CHAIN_ID=80001

# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration (if needed)
DATABASE_URL=mongodb://localhost:27017/starflow

# CORS Configuration
CORS_ORIGIN=* 